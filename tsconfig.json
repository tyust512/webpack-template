{
  "compilerOptions": {
    "sourceMap": true, // 生成sourcemap供浏览器调试
    "allowJs": false, 
    "module": "esnext",  
    "target": "es5", // 转换的目标
    "moduleResolution": "node",
  },
  "include": ["src/**/*.ts"],
  "exclude": [
    "node_modules", 
    "dist", 
    "*.test.js"
  ],
}

